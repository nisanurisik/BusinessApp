@model Employer

<div class="flex justify-between items-center mt-5">
  <h2>Add Employer</h2>
  <a asp-controller="AdminEmployers" asp-action="Index"
    class="btn bg-[#230939] hover:bg-[#230939] text-white hover:text-white">Back to Employers</a>
</div>

<div class="divider my-5"></div>

<form asp-controller="AdminEmployers" asp-action="Create" method="post" enctype="multipart/form-data" class="mb-20">
  <div class="mt-5 w-[50%] mx-auto space-y-4">

    <label class="form-control w-full">
      <div class="label">
        <span class="label-text">User</span>
      </div>
      <select asp-for="UserId" asp-items="ViewBag.Users" class="select select-bordered">
        <option disabled selected>Select User</option>
      </select>
      <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
    </label>

    <label class="form-control mb-3">
      <div class="label">
        <span class="label-text">Company Name</span>
      </div>
      <input asp-for="CompanyName" type="text" placeholder="ONI Academy" class="input input-bordered w-full" />
    </label>

    <label class="form-control w-full">
      <div class="label">
        <span class="label-text">Sector</span>
      </div>
      <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="select select-bordered">
        <option disabled selected>Select Sector</option>
      </select>
      <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
    </label>

    <div class="form-control">
      <label class="label cursor-pointer">
        <span asp-validation-for="IsActive" class="label-text">Is Active?</span>
        <input asp-for="IsActive" type="checkbox" checked="checked" class="checkbox mr-3" />
      </label>
    </div>

    <button type="submit" class="btn bg-[#230939] hover:bg-[#230939] text-white hover:text-white my-4 w-full">Add
      Employer</button>
  </div>
</form>
