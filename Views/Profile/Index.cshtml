@model User

<div class="flex gap-10 mt-10 mb-20">
  <div class="w-1/3">
    <div class="p-6 bg-white shadow-lg rounded-lg">
      <div class="flex flex-col justify-center items-center">
        <div class="mb-4">
          <img src="~/img/users/@Model.ProfileImage" alt="Profile Image"
            class="rounded-full w-32 shadow-md border-4 border-[#230939]">
        </div>
        <div>
          <div class="text-center">
            <h2 class="text-2xl font-bold text-gray-800 mb-1">@Model.FullName</h2>
            <p class="text-xl font-semibold">@Model.Education</p>
          </div>

          <div class="divider"></div>

          <p class="text-gray-600 mb-1">
            <span class="font-semibold text-[#230939]">Email:</span> @Model.Email
          </p>
          <p class="text-gray-600 mb-1">
            <span class="font-semibold text-[#230939]">Password:</span> ******
          </p>
          <p class="text-gray-600 mb-1">
            <span class="font-semibold text-[#230939]">Phone:</span> @Model.PhoneNumber
          </p>
          <p class="text-gray-600 mb-1">
            <span class="font-semibold text-[#230939]">Birthday:</span> @Model.DateOfBirth?.ToString("dd/MM/yyyy")
          </p>
          <p class="text-gray-600 mb-1">
            <span class="font-semibold text-[#230939]">City:</span> Hatay
          </p>

          <div class="my-4 border-t border-gray-200"></div>

          <p class="text-gray-600 mb-1">
          </p>
          <p class="text-gray-600">
            <span class="font-semibold text-[#230939]">Skills:</span> @Model.Skills
          </p>
          <p class="text-gray-600">
            <span class="font-semibold text-[#230939]">Resume:</span> @Model.ResumeUrl
          </p>
        </div>

        <a asp-controller="Profile" asp-action="Edit"
          class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded w-40 h-[40px] min-h-0 mt-6">Edits</a>
      </div>
    </div>
  </div>


  <div class="w-2/3">
    <h1 class="text-4xl font-bold text-center mb-10">My Profile</h1>
    <div class="grid grid-cols-3 gap-6">

      @if (User.IsInRole("User"))
      {

        <div class="flex flex-col h-full shadow-lg bg-white rounded-lg p-5 text-center">
          <div class="mb-4">
            <h2 class="text-2xl font-bold text-center mb-2">My Applications</h2>
            <p class="text-gray-600">Track your job applications</p>
          </div>
          <a class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0 mt-auto"
            asp-controller="Profile" asp-action="MyJobs">View
            Applications</a>
        </div>

        <div class="flex flex-col h-full shadow-lg bg-white rounded-lg  p-5 text-center">
          <div class="mb-4">
            <h2 class="text-2xl font-bold text-center mb-2">Saved Opportunities</h2>
            <p class="text-gray-600">Access your saved job opportunities</p>
          </div>
          <a asp-controller="Profile" asp-action="SavedJobs"
            class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0 mt-auto">View
            Saved Jobs</a>
        </div>
      }

      @if (User.IsInRole("Employer"))
      {
        <div class="flex flex-col h-full shadow-lg bg-white rounded-lg p-5 text-center">
          <div class="mb-4">
            <h2 class="text-2xl font-bold text-center mb-2">My Company</h2>
            <p class="text-gray-600">Manage and review your company</p>
          </div>
          <a asp-controller="Profile" asp-action="MyCompany"
            class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0 mt-auto">View
            Blogs</a>
        </div>

        <div class="flex flex-col h-full shadow-lg bg-white rounded-lg p-5 text-center">
          <div class="mb-4">
            <h2 class="text-2xl font-bold text-center mb-2">My Job</h2>
            <p class="text-gray-600">Manage and review your job</p>
          </div>
          <a asp-controller="Profile" asp-action="MyJob"
            class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0 mt-auto">View
            Blogs</a>
        </div>
      }

      <div class="flex flex-col h-full shadow-lg bg-white rounded-lg p-5 text-center">
        <div class="mb-4">
          <h2 class="text-2xl font-bold text-center mb-2">My Blogs</h2>
          <p class="text-gray-600">Manage and review your blogs</p>
        </div>
        <a asp-controller="Profile" asp-action="MyBlogs"
          class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0 mt-auto">View
          Blogs</a>
      </div>

    </div>
  </div>

</div>