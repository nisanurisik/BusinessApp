@model JobViewModel

@section FullWidthSection {
    <div class="flex flex-col justify-center items-center text-white h-[75vh] mb-20">
        <h2 class="text-[55px] font-medium">Join the Future of AI</h2>
        <h2 class="text-[55px] font-medium">We're Hiring!</h2>
        <p class="text-2xl">We're looking for great people to join our growing team.</p>
        <button class="btn btn-outline hover:bg-[#230939] text-white hover:text-white w-56 my-5">View Vacancies</button>

    </div>
}

<p class="my-3">
    At Tor.app, we're not just offering a job – we're inviting you to shape the future of AI. Working here means being
    part of a dynamic team that's pioneering solutions to simplify tasks, increase productivity, and drive connectivity.
</p>
<p>
    If you're looking for a workplace that values innovation, encourages collaboration, and offers opportunities for
    growth, Tor.app is the perfect workplace. <span class="font-medium">Join us, and let's revolutionize AI
        together.</span>
</p>

<div class="text-center mt-[110px]">
    <h2 class="text-[33px] text-black">Our Open Positions</h2>
    <div class="divider w-[330px] mx-auto before:bg-black after:bg-black"></div>
</div>

<div class="flex justify-center space-x-5 my-[55px]">
    <select asp-for="Job.CategoryId" asp-items="ViewBag.Categories"
        class="select select-bordered w-full max-w-xs bg-white shadow-lg">
        <option disabled selected>Select Department</option>
    </select>

    <select asp-for="Job.Location" asp-items="ViewBag.Locations"
        class="select select-bordered w-full max-w-xs bg-white shadow-lg">
        <option disabled selected>Select Location</option>
    </select>


    <select asp-for="Job.JobTypeId" asp-items="ViewBag.JobTypes"
        class="select select-bordered w-full max-w-xs bg-white shadow-lg">
        <option disabled selected>Select Job Type</option>
    </select>
</div>

<div class="flex gap-6">

    <div class="w-1/6">
        <ul class="menu rounded-md shadow-xl">
            <li>
                <details open>
                    <summary class="text-xl">Country / City</summary>
                    <ol>
                        <li>
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                <span class="ml-2">İstanbul</span>
                            </label>
                        </li>
                        <li>
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                <span class="ml-2">Hatay</span>
                            </label>
                        </li>
                    </ol>
                </details>
            </li>
            <div class="divider m-0"></div>
            <li>
                <details open>
                    <summary class="text-xl">Categories</summary>
                    <ol>
                        @foreach (var positon in Model.Categories)
                        {
                            <li>
                                <label class="flex items-center cursor-pointer">
                                    <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                    <span class="ml-2">@positon.Name</span>
                                </label>
                            </li>
                        }
                    </ol>
                </details>
            </li>
            <div class="divider m-0"></div>
            <li>
                <details open>
                    <summary class="text-xl">Job Type</summary>
                    <ol>
                        @foreach (var jobType in Model.JobTypes)
                        {
                            <li>
                                <label class="flex items-center cursor-pointer">
                                    <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                    <span class="ml-2">@jobType.Type</span>
                                </label>
                            </li>
                        }
                    </ol>
                </details>
            </li>
            <div class="divider m-0"></div>
            <li>
                <details open>
                    <summary class="text-xl">Sector</summary>
                    <ol>
                        <li>
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                <span class="ml-2">asd</span>
                            </label>
                        </li>
                    </ol>
                </details>
            </li>
            <div class="divider m-0"></div>
            <li>
                <details open>
                    <summary class="text-xl">Position Level</summary>
                    <ol>
                        <li>
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                <span class="ml-2">asd</span>
                            </label>
                        </li>
                    </ol>
                </details>
            </li>
            <div class="divider m-0"></div>
            <li>
                <details open>
                    <summary class="text-xl">Department</summary>
                    <ol>
                        <li>
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" class="checkbox bg-[#343A40] checkbox-xs rounded-[5px]" />
                                <span class="ml-2">asd</span>
                            </label>
                        </li>
                    </ol>
                </details>
            </li>
            <div class="divider m-0"></div>
            <button class="btn bg-[#230939] hover:bg-[#230939] text-white hover:text-white my-3">Apply</button>
        </ul>
    </div>

    <div class="w-5/6">
        <div class="grid xl:grid-cols-2 gap-6">
            @foreach (var job in Model.Jobs)
            {
                <div class="rounded-md flex items-center shadow-xl p-10 space-x-10">
                    <div class="">
                        <img src="~/img/job/1.webp" alt="@job.Title" class="rounded-md w-24" />
                    </div>
                    <div class="flex flex-col flex-grow justify-center">
                        <div>
                            <h2 class="">@job.Title</h2>
                        </div>
                        <div class="flex space-x-5">
                            <p>@job.Location</p>
                            <p>@job.JobType?.Type</p>
                        </div>
                    </div>
                    <div class="ml-auto">
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id"
                            class="btn bg-[#230939] hover:bg-[#230939] text-white h-[40px] min-h-0">
                            Apply
                            <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<div class="flex justify-center join my-[31px]">
    <button class="join-item btn">«</button>
    <button class="join-item btn">1</button>
    <button class="join-item btn btn-active">2</button>
    <button class="join-item btn">...</button>
    <button class="join-item btn">31</button>
    <button class="join-item btn">»</button>
</div>