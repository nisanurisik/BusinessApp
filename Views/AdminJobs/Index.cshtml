@model IEnumerable<Job>

<div class="flex justify-between items-center mt-5">

    <h2>job List</h2>
    <a asp-controller="AdminJobs" asp-action="Create"
        class="btn bg-[#230939] hover:bg-[#230939] text-white hover:text-white">Add Enrollment</a>

</div>

<div class="overflow-x-auto">
    <table class="table">
        <!-- head -->
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Location</th>
                <th>Remote Option</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <th>@job.Id</th>
                    <td>@job.Title</td>
                    <td>@job.Location</td>
                    <td>@job.RemoteOption</td>
                </tr>
            }
        </tbody>
    </table>
</div>