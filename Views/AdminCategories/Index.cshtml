@model IEnumerable<Category>
<div class="flex justify-between items-center mt-5">

  <h2>Categories List</h2>
  <a asp-controller="AdminCategories" asp-action="Create"
    class="btn bg-[#230939] hover:bg-[#230939] text-white hover:text-white">Add Category</a>

</div>
<div class="overflow-x-auto">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var ctg in Model)
      {
        <tr>
          <td>@ctg.Id</td>
          <th>@ctg.Name</th>
          <td>
            <a asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@ctg.Id"
              class="btn btn-sm btn-warning">Edit</a>
            <button class="btn btn-sm btn-error" onclick="my_modal_@(ctg.Id).showModal()">
              Delete
            </button>

          </td>
        </tr>
        @await Html.PartialAsync("_Delete", ctg)
      }
    </tbody>
  </table>
</div>