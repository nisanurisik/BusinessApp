@model IEnumerable<User>

<a asp-controller="Users" asp-action="Create" class="btn btn-primary">Add User</a>

<div class="overflow-x-auto">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th>#</th>
        <th>Full Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Date Of Birth</th>
        <th>Education</th>
        <th>Skills</th>
        <th>Role</th>
        <th>Resume</th>
        <th>Profile Image</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      @foreach (var user in Model)
      {
        <tr>
          <th>@user.Id</th>
          <td>@user.FullName</td>
          <td>@user.Email</td>
          <td>@user.PhoneNumber</td>
          <td>@user.DateOfBirth</td>
          <td>@user.Education</td>
          <td>@user.Skills</td>
          <td>@user.Role?.Name</td>
          <td>@user.ResumeUrl</td>
          <td>@user.ProfileImage</td>
          <td>
            <button class="btn btn-sm btn-error" onclick="my_modal_@(user.Id).showModal()">
              Delete
            </button>
            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
          </td>
        </tr>
        @await Html.PartialAsync("_Delete", user)
      }
    </tbody>

  </table>
</div>