<div class="mb-20">
    <h1 class="text-4xl font-bold text-center mb-10">Admin Panel</h1>

    <div class="grid grid-cols-3 gap-6">

        <div class="shadow-lg bg-white rounded-lg p-6 text-center">
            <div class="my-4">
                <h2 class="text-2xl font-bold text-center">Jobs</h2>
                <p class="text-gray-600">Manage your jobs</p>
            </div>
            <a asp-controller="AdminJobs" asp-action="Index"
                class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0">Go
                to Jobs</a>
        </div>

        <div class="shadow-lg bg-white rounded-lg p-6 text-center">
            <div class="my-4">
                <h2 class="text-2xl font-bold text-center">Blogs</h2>
                <p class="text-gray-600">Manage your blogs</p>
            </div>
            <a asp-controller="AdminBlogs" asp-action="Index"
                class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0">Go
                to Blogs</a>
        </div>

        <div class="shadow-lg bg-white rounded-lg p-6 text-center">
            <div class="my-4">
                <h2 class="text-2xl font-bold text-center">Categories</h2>
                <p class="text-gray-600">Manage your categories</p>
            </div>
            <a asp-controller="AdminCategories" asp-action="Index"
                class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0">Go
                to Categories</a>
        </div>

        <div class="shadow-lg bg-white rounded-lg p-6 text-center">
            <div class="my-4">
                <h2 class="text-2xl font-bold text-center">Users</h2>
                <p class="text-gray-600">Manage your users</p>
            </div>
            <a asp-controller="AdminUsers" asp-action="Index"
                class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0">Go
                to Users</a>
        </div>

        <div class="shadow-lg bg-white rounded-lg p-6 text-center">
            <div class="my-4">
                <h2 class="text-2xl font-bold text-center">Employers</h2>
                <p class="text-gray-600">Manage your employers</p>
            </div>
            <a asp-controller="AdminEmployer" asp-action="Index"
                class="btn bg-[#230939] hover:bg-[#230939] text-white font-bold py-2 px-4 rounded h-[40px] min-h-0">Go
                to Employers</a>
        </div>

    </div>
</div>