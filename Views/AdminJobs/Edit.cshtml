@model Job

<form asp-controller="AdminJobs" asp-action="Edit" method="post">
  <input type="hidden" asp-for="Id">
  <div class="mt-5 w-[50%] mx-auto space-y-4">

    <label class="form-control">
      <div class="label">
        <span class="label-text">
          <span class="label-text">First Name</span>
        </span>
      </div>
      <input asp-for="Title" type="text" placeholder="Title" class="input input-bordered" />
    </label>
    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>

    <label class="form-control">
      <div class="label">
        <span class="label-text">Description</span>
      </div>
      <textarea asp-for="Description" class="textarea textarea-bordered h-24" placeholder="Job Description"></textarea>
    </label>
    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>

    <label class="form-control">
      <div class="label">
        <span class="label-text">
          <span class="label-text">Location</span>
        </span>
      </div>
      <input asp-for="Location" type="text" placeholder="Location" class="input input-bordered" />
    </label>
    <span asp-validation-for="Location" class="text-red-500 text-sm"></span>

    <input asp-for="SalaryRange" type="range" min="0" max="5000" value="1000" class="range" step="1000" />
    <div class="flex w-full justify-between px-2 text-xs">
      <span asp-validation-for="SalaryRange">$1000</span>
      <span asp-validation-for="SalaryRange">$2000</span>
      <span asp-validation-for="SalaryRange">$3000</span>
      <span asp-validation-for="SalaryRange">$4000</span>
      <span asp-validation-for="SalaryRange">$5000</span>
    </div>

    <div class="flex gap-4">
      <label class="form-control w-full max-w-xs">
        <div class="label">
          <span class="label-text">Category</span>
        </div>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="select select-bordered">
          <option disabled selected>Select Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
      </label>
    </div>

    <div class="flex gap-4">
      <label class="form-control w-full max-w-xs">
        <div class="label">
          <span class="label-text">Job Type</span>
        </div>
        <select asp-for="JobTypeId" asp-items="ViewBag.JobTypes" class="select select-bordered">
          <option disabled selected>Select Job Type</option>
        </select>
        <span asp-validation-for="JobTypeId" class="text-red-500 text-sm"></span>
      </label>
    </div>

    <div class="flex gap-4">
      <label class="form-control w-full max-w-xs">
        <div class="label">
          <span class="label-text">User</span>
        </div>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="select select-bordered">
          <option disabled selected>Select User</option>
        </select>
        <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
      </label>
    </div>


    <div class="form-control">
      <label class="label cursor-pointer">
        <span asp-validation-for="IsActive" class="label-text">Is Active?</span>
        <input asp-for="IsActive" type="checkbox" checked="checked" class="checkbox" />
      </label>
    </div>

    <button type="submit" class="btn btn-primary my-4 w-full">Update Job</button>
  </div>
</form>
