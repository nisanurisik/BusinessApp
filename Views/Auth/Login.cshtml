<section class="container mx-auto mt-10 mb-24">
    <div class="flex flex-col lg:flex-row justify-center items-center gap-8">
        <!-- Görsel Alanı -->
        <div class="w-full md:w-1/2 flex justify-center">
            <img src="~/img/auth/login.webp" alt="Login Illustration" class="max-w-xs lg:max-w-sm rounded-xl">
        </div>

        <!-- Form Alanı -->
        <div class="w-full md:w-1/2">
            <h2 class="text-2xl font-bold text-gray-800">Sign in to BusinessApp</h2>
            <p class="text-gray-600 mt-2">Welcome back! Please enter your credentials to access your account.</p>

            <!-- Giriş Formu -->
            <form asp-controller="Auth" asp-action="Login" method="post" class="mt-6 space-y-4 w-[75%]">

                <label class="input input-bordered flex items-center gap-2">
                    <i class="fa-solid fa-envelope"></i>
                    <input name="Email" type="text" class="grow" placeholder="Email" />
                </label>

                <label class="input input-bordered flex items-center gap-2">
                    <i class="fa-solid fa-key"></i>
                    <input name="Password" type="password" class="grow" placeholder="********" />
                </label>

                <!-- Giriş Butonu -->
                <div>
                    <button type="submit"
                        class="btn bg-[#B561B0] hover:bg-[#B561B0] text-white hover:text-white w-full">Login</button>
                </div>

                <!-- Kayıt Ol Linki -->
                <p class="text-center text-sm">
                    Don’t have an account?
                    <a asp-controller="Auth" asp-action="Signup" class="link text-[#B561B0]">Register</a>
                </p>
            </form>
        </div>
    </div>
</section>
