@model Job
<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">@Model.Title</h1>
      <p class="py-6">
        @Model.Description
      </p>
      <p class="py-6">
        @(Model.Category?.Name)
      </p>

      <p class="py-6">
        @(Model.JobType?.Type)
      </p>

      <p class="py-6">
        @Model.Location
      </p>
      <p class="py-6">
        @Model.SalaryRange
      </p>

      <button class="btn btn-sm btn-error" onclick="my_modal_@(Model.Id).showModal()">
        Delete
      </button>
      <a asp-controller="Jobs" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>
    </div>
    @await Html.PartialAsync("_Delete", Model)
  </div>
</div>