@model Category

<form asp-controller="Categories" asp-action="Edit" method="post">
  <input type="hidden" asp-for="Id">
  <label asp-for="Name" class="input input-bordered flex items-center gap-2">
    Name
    <input asp-for="Name" type="text" class="grow" placeholder="Name" />
  </label>
  <button class="btn btn-primary">Edit</button>
</form>
