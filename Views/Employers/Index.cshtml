@model IEnumerable<Plan>

@section FullWidthSection {
    <div class="flex items-center gap-20 h-[450px]">
        <div>
            <h2 class="text-4xl font-medium text-white mb-5">Find the Perfect Candidate for Your Company</h2>
            <p class="text-white mb-5">Discover top talent effortlessly with WorkConnect. Post job listings, review
                applications, and connect with skilled professionals who meet your needs. Join thousands of employers who
                trust us for their hiring process.
            </p>
            @if (User.Identity!.IsAuthenticated)
            {
                <button class="btn bg-[#B561B0] text-white py-3 px-5 h-[40px] min-h-0 w-56" onclick="my_modal_1.showModal()">
                    Create Employer Account
                </button>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login" class="btn bg-[#B561B0] text-white py-3 px-5 h-[40px] min-h-0 w-56">
                    Log in first to apply
                </a>
            }
            @await Html.PartialAsync("_CreateEmployer", new Employer())
        </div>
        <div class="flex justify-end w-1/2">
            <img src="~/img/employer/employer.png" alt="" />
        </div>
    </div>
}

<div class="text-center my-[110px]">
    <h2 class="text-gray-800 text-4xl font-medium mb-3">Finding Employees on BusinessApp is Very Easy!</h2>
    <p class="text-gray-500">Sign up now, post your free job ad effortlessly, and quickly choose your new employee from
        the incoming applications!</p>

    <ul class="flex flex-col timeline timeline-vertical my-[55px] gap-10">
        <li>
            <div class="timeline-start text-start">
                <div>
                    <p class="text-gray-800 text-3xl font-medium mb-3">Joining Is Very Easy</p>
                    <p class="text-gray-500">You don't need to spend hours to join BusinessApp! You can sign up for free
                        in just one minute.</p>
                </div>
            </div>
            <div class="timeline-end flex justify-center w-full">
                <img src="~/img/employer/login.png" alt="" class="w-1/2">
            </div>
        </li>
        <li>
            <div class="timeline-start flex justify-center w-full">
                <img src="~/img/employer/post.png" alt="" class="w-1/2">
            </div>
            <div class="timeline-end text-start">
                <p class="text-gray-800 text-3xl font-medium mb-3">Posting an Ad Takes Only 1 Minute</p>
                <p class="text-gray-500">Post a free ad in just one minute. Choose how you want to receive applications.
                    You can either get calls or review applications within the app.</p>
            </div>
        </li>
        <li>
            <div class="timeline-start text-start">
                <p class="text-gray-800 text-3xl font-medium mb-3">Quickly Connect with Applicants</p>
                <p class="text-gray-500">To find your employee quickly, you can call the applicant directly or send an
                    instant message.</p>
            </div>
            <div class="timeline-end flex justify-center w-full">
                <img src="~/img/employer/connect.png" alt="" class="w-1/2">
            </div>
        </li>
    </ul>

</div>

<div class="my-[110px]">
    <div class="text-center mb-[55px]">
        <h2 class="text-4xl text-gray-800 font-medium mb-3">Solution Packages Tailored to Your Needs</h2>
        <p>Quickly access our service packages designed to address your human resources needs.</p>
    </div>

    <div class="grid xl:grid-cols-3 md:grid-cols-2 gap-6">
        @foreach (var plan in Model)
        {
            <div class="flex flex-col bg-white shadow rounded-lg p-6 h-full">
                <h2 class="text-lg font-bold text-[#230939]">@plan.Title</h2>
                <ul class="my-4 space-y-2">
                    <li class="flex items-center"><span class="text-green-500 mr-2">✔</span>@plan.ContentOne</li>
                    <li class="flex items-center"><span class="text-green-500 mr-2">✔</span>@plan.ContentTwo</li>
                    <li class="flex items-center"><span class="text-green-500 mr-2">✔</span>@plan.ContentThree</li>
                </ul>
                <div class="mt-auto">
                    <span class="mt-6 text-2xl font-bold text-gray-800">@plan.Price₺</span>
                    <span class="text-sm font-normal text-gray-500">+VAT</span>
                    <button class="mt-4 w-full bg-[#230939] text-white py-2 rounded">+ Add</button>
                </div>
            </div>
        }


    </div>
</div>
