@model HomeViewModel

<!-- Job Search -->
@section FullWidthSection {
    <div class="flex justify-between items-center h-[500px]">
        <div>
            <p class="text-[48px] text-[#B561B0] py-2">Find the <span class="text-white">right</span> fit.</p>

